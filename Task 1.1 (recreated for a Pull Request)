min = 60
hour = 3600
day = 86400

mins = int(min)
hours = int(hour)
days = int(day)

duration = int(input())

if duration < mins:
    print(duration, 'second(s)')
else:
    if duration >= mins and duration < hours:
        print(duration // mins, 'minute(s)',
              duration - mins * (duration // mins), 'second(s)')
    else:
        if duration >= hours and duration < days:
            print(duration // hours, 'hour(s)',
                  (duration - hours * (duration // hours)) // mins,
                  'minute(s)', duration - mins * (duration // mins),
                  'second(s)')
        else:
            if duration >= days:
                print(duration // days, 'day(s)',
                      (duration - days * (duration // days)) // hours,
                      'hour(s)',
                      (duration - hours * (duration // hours)) // mins,
                      'minute(s)', duration - mins * (duration // mins),
                      'second(s)')
